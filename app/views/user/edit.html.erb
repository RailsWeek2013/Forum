<div class="row"><div class="col-md-4">

<%= render partial: "layouts/error", locals: { errors: @user.errors } %>

<%= form_for @user, url: user_path, html: { multipart: true, role: 'form' } do |f| %>
    <div class="form-group">
      <%= image_tag(@user.avatar_url) if @user.avatar? %>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <div class="checkbox">
        <%= f.label "Remove avatar", for: 'user_remove_avatar' %>
        <%= f.check_box :remove_avatar %>
      </div>
    </div>

    <div class="form-group">
        <%= f.label :name, class: 'control-label', for: 'input-lable' %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :lastname, class: 'control-label', for: 'input-lable' %>
        <%= f.text_field :lastname, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :birthday, class: 'control-label', for: 'input-lable' %>
      <div class="controls">
        <% day = @user.birthday || Date.today %>
        <%= select_date day, prefix: :birth_day, order: [:day, :month, :year], start_year: Time.now.year - 100, end_year: Time.now.year %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :gender, class: 'control-label', for: 'input-lable' %>
      <div class="controls">
        <%= f.select :gender, [['M'], ['W']] %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :signature, class: 'control-label', for: 'input-lable' %>
      <div class="controls">
        <%= f.text_area :signature %>
      </div>
    </div>

    <div class="form-group">
      <div class="controls">
        <%= f.submit class: 'btn btn-success' %>
        <%= link_to "Abbrechen", current_user_path, class: 'btn btn-danger' %>
      </div>
    </div>
<% end %>

</div></div>