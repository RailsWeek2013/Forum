<%= form_for @user, url: user_path, class: 'form-horizontal', html: { multipart: true } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="control-group">
      <%= image_tag(@user.avatar_url) if @user.avatar? %>
      <div class="controls">
        <%= f.file_field :avatar %>
      </div>
      <div class="controls">
        <%= f.label "Remove avatar", class: 'control-label', for: 'user_remove_avatar' %>
        <%= f.check_box :remove_avatar %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :name, class: 'control-label', for: 'input-lable' %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :lastname, class: 'control-label', for: 'input-lable' %>
      <div class="controls">
        <%= f.text_field :lastname %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :birthday, class: 'control-label', for: 'input-lable' %>
      <div class="controls">
        <% day = @user.birthday || Date.today %>
        <%= select_date day, prefix: :birth_day, order: [:day, :month, :year], start_year: Time.now.year - 100, end_year: Time.now.year %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :gender, class: 'control-label', for: 'input-lable' %>
      <div class="controls">
        <%= f.select :gender, [['M'], ['W']] %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :signature, class: 'control-label', for: 'input-lable' %>
      <div class="controls">
        <%= f.text_area :signature %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit class: 'btn btn-success' %>
        <%= link_to "Abbrechen",show_current_user_path, class: 'btn btn-danger' %>
      </div>
    </div>
<% end %>
