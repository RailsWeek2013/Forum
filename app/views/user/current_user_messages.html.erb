<div class="row">

  <div class="col-md-2">
    <%= render partial: 'user/user_navi', locals: {
            new_message_count: @new_message_count,
            active: 3
    } %>
  </div>

  <div class="col-md-10">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#received_messages" data-toggle="tab">Empfangene Nachrichten</a></li>
      <li><a href="#sent_messages" data-toggle="tab">Gesendete Nachrichten</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="received_messages">
        <%= render partial: 'private_message/messages_table', locals: { messages: @my_received_messages } %>
      </div>

      <div class="tab-pane" id="sent_messages">
        <%= render partial: 'private_message/messages_table', locals: { messages: @my_sent_messages } %>
      </div>

    </div>


    <%= link_to 'Neu Nachricht', private_messages_path  %>
  </div>
</div>
