<% if flash.any? %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, class: name %>
      <% end %>
    </div>
<% end %>

<ul class="nav nav-tabs">
  <li class="active"><a href="#profile" data-toggle="tab">Profil</a></li>
  <li><a href="#mythreads" data-toggle="tab">My Threads</a></li>
  <li><a href="#message" data-toggle="tab">Private-Nachrichten</a> </li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="profile">
    <%= render partial: "user/user_profile" %>
  </div>

  <div class="tab-pane" id="mythreads">
    <%= render partial: 'user_threads/user_threads', locals: { user_threads: @mythreads } %>
  </div>

  <div class="tab-pane" id="message" >
    <%= render partial: 'user/user_messages' %>
  </div>
</div>
