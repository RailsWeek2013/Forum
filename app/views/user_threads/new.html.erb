<h1>Neuen Thread erstellen</h1>

<%= render partial: "layouts/error", locals: { errors: @user_thread.errors } %>

<%= form_for([@user_thread.topic, @user_thread], class: 'form-horizontal', html: {role: 'form', style: 'width: 25%'}) do |f| %>
    <div class="form-group">
      <%= f.label :title, class: 'control-label', for: 'input-lable'%>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
        <%= link_to 'Abbrechen', topic_user_threads_path, class: 'btn btn-danger' %>
    </div>
<% end %>

