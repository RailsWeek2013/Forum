<% @title = "Topic - Edit" %>
<h1>Edit-Topic</h1>

<%= render partial: 'layouts/error', locals: { errors: @topic.errors } %>

<%= form_for @topic, class: 'form-horizontal', html: {role: 'form', style: 'width: 20%'} do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'control-label', for: 'input-lable' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-success' %>
    <%= link_to 'Abbrechen', admin_topics_threads_path, class: 'btn btn-danger' %>
<% end %>
