<% @title = "Topic - Edit" %>
<h1>Edit-Topic</h1>

<%= form_for @topic, class: 'form-horizontal' do |f| %>
    <% if @topic.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

          <ul>
            <% @topic.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <%= f.label :name, class: 'control-label', for: 'input-lable' %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <%= f.submit class: 'btn btn-success' %>
            <%= link_to 'Abbrechen', admin_topics_threads_path, class: 'btn btn-danger' %>
        </div>
    </div>
<% end %>
