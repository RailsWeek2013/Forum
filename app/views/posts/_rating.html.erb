<% if user_signed_in? %>
    <p class="text-success pull-right"> <%= post.upRates.count %> </p>

    <%= link_to rate_up_topic_user_thread_post_path(@topic, @userThread, post), method: :patch  do %>
        <span class="glyphicon glyphicon-thumbs-up pull-right"> </span>
    <% end %>

    <p class="text pull-right"> <%= post.downRates.count  %> </p>

    <%= link_to  rate_down_topic_user_thread_post_path(@topic, @userThread, post), method: :patch do %>
        <span class="glyphicon glyphicon-thumbs-down pull-right"> </span>
    <% end %>

<% end %>