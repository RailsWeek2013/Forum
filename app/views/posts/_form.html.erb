<%= render partial: "layouts/error", locals: { errors: @topic.errors } %>

<%= form_for [@topic, @userThread, @post] do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <div class="controls">
        <%= f.text_field :title %>
      </div>
  </div>

  <div class="control-group">
    <%= f.label :content %>
    <div class="controls">
        <%= f.text_area :content, rows: 5 %>
    </div>
  </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit class: 'btn btn-success'%>
      </div>
    </div>
<% end %>
