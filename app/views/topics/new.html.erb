<h1>New topic</h1>

<%= render partial: "layouts/error", locals: { errors: @topic.errors } %>

<%= form_for @topic, class: 'form-horizontal' do |f| %>
    <div class="control-group">
      <%= f.label :name, class: 'control-label', for: 'input-lable' %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit class: 'btn btn-success'%>
        <%= link_to 'Abbrechen', topics_path, class: 'btn btn-danger' %>
      </div>
    </div>
<% end %>
