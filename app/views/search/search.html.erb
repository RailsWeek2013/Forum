<h1>Sucheergebnisse</h1>
<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Title</a></li>
    <li><a href="#tab2" data-toggle="tab">im Text</a></li>
    <li><a href="#tab3" data-toggle="tab">User</a></li>
    <li><a href="#tab4" data-toggle="tab">Topics</a></li>
    <li><a href="#tab5" data-toggle="tab">Threads</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <% @results.each do |result| %>
          <p> <%= link_to result.title, path_to_post(result) %> in Thread:<%= result.user_thread.title %>, in Topic:<%= result.topic.name %>  </p>
      <% end %>
    </div>
    <div class="tab-pane" id="tab2">
      <% @contentResults.each do |result| %>
          <p> <%= link_to result.title, path_to_post(result) %> in Thread:<%= result.user_thread.title %>, in Topic:<%= result.topic.name %>  </p>
      <% end %>
    </div>
     <div class="tab-pane" id="tab3">
      <% @userResults.each do |result| %>
          <p> <%= link_to result.email, show_user_path(result) %>  </p>
      <% end %>
    </div>
     <div class="tab-pane" id="tab4">
      <% @topicResults.each do |result| %>
          <p> <%= link_to result.name, topics_path(result) %>  </p>
      <% end %>
    </div>
     <div class="tab-pane" id="tab5">
      <% @threadResults.each do |result| %>
          <p> <%= link_to result.title, topic_user_threads_path(result.topic,result) %>  </p>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Back", root_path %>
